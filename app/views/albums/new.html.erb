<h1>Create Album</h1>
<%= simple_form_for @album do |f| %>
  <%= f.input :title, label: false, placeholder: "Title", required: false %>
  <br><label for="album_cover" class="label-file">Add a cover picture :</label><br>
  <%= f.input :cover, label: false %>
  <%= f.hidden_field :cover_cache %>
  <br>
  <%= f.input :description, label: false, placeholder: "Description" %><br><br>
  <%= f.button :submit %>
<% end %>
